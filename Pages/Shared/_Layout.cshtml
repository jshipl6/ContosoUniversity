@{
    var title = ViewData["Title"] as string ?? "Contoso University";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Contoso University</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <a class="visually-hidden-focusable position-absolute top-0 start-0 m-2 p-2 bg-light border rounded"
       href="#main">Skip to main content</a>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" role="navigation" aria-label="Main">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">Contoso University</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    @await Html.PartialAsync("_Nav")
                    <form class="d-flex ms-auto" method="get" asp-page="/Students/Index" role="search" aria-label="Quick student search">
                        <label for="q" class="visually-hidden">Search students</label>
                        <input id="q" name="q" class="form-control me-2" type="search" placeholder="Search students" />
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4" id="main">
        <main role="main">
            @await Html.PartialAsync("_StatusMessage")
            @RenderBody()
        </main>
    </div>


    <footer class="border-top py-3">
        <div class="container text-muted small">
            &copy; @DateTime.UtcNow.Year - Contoso University
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
