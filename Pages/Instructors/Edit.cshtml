@page "{id:int}"
@model ContosoUniversity.Pages.Instructors.EditModel
@{
    ViewData["Title"] = "Edit Instructor";
}

<h2>Edit Instructor</h2>

<form method="post">
    <input type="hidden" asp-for="Instructor.ID" />

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Instructor.LastName" class="form-label"></label>
                <input asp-for="Instructor.LastName" class="form-control" />
                <span asp-validation-for="Instructor.LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Instructor.FirstMidName" class="form-label"></label>
                <input asp-for="Instructor.FirstMidName" class="form-control" />
                <span asp-validation-for="Instructor.FirstMidName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Instructor.HireDate" class="form-label"></label>
                <input asp-for="Instructor.HireDate" class="form-control" />
                <span asp-validation-for="Instructor.HireDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Office Location</label>
                <input asp-for="Instructor.OfficeAssignment!.Location" class="form-control" />
                <span asp-validation-for="Instructor.OfficeAssignment!.Location" class="text-danger"></span>
                <div class="form-text">Leave blank to remove the office assignment.</div>
            </div>
        </div>

        <div class="col-md-6">
            <fieldset>
                <legend class="h5">Courses</legend>

                @if (Model.AssignedCourseDataList.Count == 0)
                {
                    <p>No courses found.</p>
                }
                else
                {
                    <div class="row row-cols-1 row-cols-sm-2">
                        @foreach (var c in Model.AssignedCourseDataList)
                        {
                            <div class="col mb-2">
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="selectedCourses"
                                           value="@c.CourseID"
                                           @(c.Assigned ? "checked" : "") />
                                    <label class="form-check-label">
                                        @c.Title
                                        @if (!string.IsNullOrEmpty(c.Department))
                                        {
                                            <small class="text-muted">(@c.Department)</small>
                                        }
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                }
            </fieldset>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="./Index" class="btn btn-outline-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
