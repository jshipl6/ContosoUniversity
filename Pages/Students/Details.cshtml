@page "{id:int}"
@model ContosoUniversity.Pages.Students.DetailsModel
@{
    ViewData["Title"] = "Student Details";
}
<h1 class="display-6">Student Details</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Student.Id</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Student.FullName</dd>

    <dt class="col-sm-2">Enrolled</dt>
    <dd class="col-sm-10">@Model.Student.EnrollmentDate.ToString("yyyy-MM-dd")</dd>
</dl>

<a class="btn btn-outline-warning" asp-page="./Edit" asp-route-id="@Model.Student.Id">Edit</a>
<a class="btn btn-outline-secondary ms-2" asp-page="./Index">Back</a>
