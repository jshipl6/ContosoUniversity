@page "{id:int}"
@model ContosoUniversity.Pages.Students.DeleteModel
@{
    ViewData["Title"] = "Delete Student";
}
<h1 class="display-6 text-danger">Delete Student</h1>
<p>Are you sure you want to delete this student?</p>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Student.FullName</dd>
    <dt class="col-sm-2">Enrolled</dt>
    <dd class="col-sm-10">@Model.Student.EnrollmentDate.ToString("yyyy-MM-dd")</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Student.ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-outline-secondary ms-2" asp-page="./Index">Cancel</a>
</form>
